<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css" media="screen,projection" />
    <title>Registro</title>
</head>
<div class='ripple-background'>
    <div class='circle xxlarge shade1'></div>
    <div class='circle xlarge shade2'></div>
    <div class='circle large shade3'></div>
    <div class='circle mediun shade4'></div>
    <div class='circle small shade5'></div>
</div>

<body>
    <div class="center-align">
        <h1 class="custom-bold">Registros de usuario</h1>
    </div>
    <div class="container" style="max-width: 100%">
        <table class="form_tabla highlight white-text blue-grey darken-1 z-depth-5 radio">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Paterno</th>
                    <th>Materno</th>
                    <th>Celular</th>
                    <th>Email</th>
                    <th>No de cuenta</th>
                    <th>Tipo de sangre</th>

                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(usuario=> { %>
                    <tr>
                        <td>
                            <%= usuario.ID %>
                        </td>
                        <td>
                            <%= usuario.Nombre %>
                        </td>
                        <td>
                            <%= usuario.Paterno %>
                        </td>
                        <td>
                            <%= usuario.Materno %>
                        </td>
                        <td>
                            <%= usuario.Celular %>
                        </td>
                        <td>
                            <%= usuario.Email %>
                        </td>
                        <td>
                            <%= usuario.No_de_Cuenta %>
                        </td>
                        <td>
                            <%= usuario.Tipo_de_sangre %>
                        </td>

                        <td>
                            <a href="/edit/<%= usuario.ID %>">Editar</a>
                            <a href="/delete/<%= usuario.ID %>"onclick="return confirm('El usuario se eliminara...')">Eliminar</a>
                        </td>
                    </tr>

                    <% }); %>
            </tbody>
        </table>
    </div>

    <div class="center-align">
        <h2 class="custom-bold">Agregar nuevo usuario</h2>
    </div>


    <div class="container">
        <form action="/add" method="POST" class="col s12 z-depth-5 white">

            <table rules="rows">
                <tr>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">account_circle</i>
                            <input id="icon_prefix" type="text" class="validate" required name="nombre">
                            <label class="grey-text text-darken-4" for="icon_prefix">Nombre(s)</label>
                        </div>
                    </td>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">account_circle</i>
                            <input id="icon_prefix" type="text" class="validate" required name="paterno">
                            <label class="grey-text text-darken-4" for="icon_prefix">Paterno</label>
                        </div>
                    </td>
                </tr>


                <tr>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">account_circle</i>
                            <input id="icon_prefix" type="text" class="validate" required name="materno">
                            <label class="grey-text text-darken-4" for="icon_prefix">Materno</label>
                        </div>
                    </td>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">phone</i>
                            <input id="icon_prefix" type="number" class="validate" required name="celular">
                            <label class="grey-text text-darken-4" for="icon_prefix">Celular</label>
                        </div>
                    </td>
                </tr>


                <tr>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">mail</i>
                            <input id="icon_prefix" type="email" class="validate" required name="email">
                            <label class="grey-text text-darken-4" for="icon_prefix">E-mail</label>
                        </div>
                    </td>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">assignment_ind</i>
                            <input id="icon_prefix" type="number" class="validate" required name="no_de_cuenta">
                            <label class="grey-text text-darken-4" for="icon_prefix">No. de Cuenta</label>
                        </div>
                    </td>
                </tr>


                <tr>
                    <td>
                        <div class="input-field col s6">
                            <i class="black-text material-icons prefix">bubble_chart</i>
                            <input id="icon_prefix" type="text" class="validate" required name="tipo_de_sangre">
                            <label class="grey-text text-darken-4" for="icon_prefix">Tipo de Sangre</label>
                        </div>
                    </td>

            </table>
            <div class="center-align">
                <button class="btn waves-effect waves-light blue darken-4 z-depth-3" type="submit" name="action"
                    maxlength="10">Enviar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>

</body>

<script type="text/javascript" src="js/materialize.min.js"></script>

</html>